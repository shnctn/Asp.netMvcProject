@model EntityLayer.Concrete.Content
@{
    ViewBag.Title = "EditContent";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Yazı Düzenle</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#" class="btn btn-primary">Yeni Yazı Düzenleniyor</a></li>
                    <li class="breadcrumb-item active">@ViewBag.d</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<br/>
@using (Html.BeginForm("EditHeading", "Heading", FormMethod.Post))
{
    <div class="form-group">
     
       
        <div class="form-group">
         
            @Html.Label("İçerik Düzenleniyor...")
            @Html.TextAreaFor(x => x.ContentValue,20,30, new { @class = "form-control" })
            <br />
            <input type="hidden" name="Heading" value="@ViewBag.vlc"/>
            <br />
            <button clasS="btn btn-success">Güncelle</button>
        </div>
    </div>
}
